<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:gravity="right"
        android:hint="skip"
        android:textColor="#ff4500"
        android:textColorHint="#ff4500"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Don't Worry, We Don't Spam out users.\n\n
                         An OTP has been sent to your Mobile Number and Email Address"
        android:textSize="15dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="OTP"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@drawable/orange_circular"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@drawable/orange_circular"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@drawable/orange_circular"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@drawable/orange_circular"
            android:gravity="center"
            android:text="5"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@drawable/orange_circular"
            android:gravity="center"
            android:text="6"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="left"
        android:text="Resend OTP(00:46)" />

    <Button
        android:id="@+id/btngo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circular"
        android:hint="GO ->"
        android:textColorHint="#ffffff"
        android:textSize="25dp" />
</LinearLayout>
